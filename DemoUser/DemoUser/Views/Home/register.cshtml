@model DemoUser.Models.User


<h1>Sign Up</h1>

<h2>@ViewBag.Message</h2>

<form asp-controller="Home" asp-action="insertUser"
      method="post">
    <table border="1" cellpadding="10">
        <tr>
            <td>First Name :</td>
            <td><input asp-for="FirstName" /></td>
        </tr>
        <tr>
            <td>Last Name :</td>
            <td><input asp-for="LastName" /></td>
        </tr>
        <tr>
        <tr>
            <td>User Name:</td>
            <td><input asp-for="Username" /></td>
        </tr>
        <tr>
            <td>Email :</td>
            <td><input asp-for="Email" /></td>
        </tr>
        <tr>
            <td>Password :</td>
            <td><input type="password" asp-for="Password" /></td>
        </tr>
        <tr>
            <td colspan="2">
                <button type="submit">Sign up</button>
            </td>
        </tr>
    </table>
</form>
