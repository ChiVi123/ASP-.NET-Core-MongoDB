@model DemoUser.Models.Content

@{
    ViewData["Title"] = "addContent";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="addContent.css" />
</head>
<body>
    <div id="main-content">
        <div id="sub-title">Add Content</div>

        <form id="form-input" asp-action="addContent" method="post" asp-controller="Content" enctype="multipart/form-data">

            <div class="item">

                <label class="form-label">Title</label>
                <br>
                <textarea asp-for="title" class="form-label" cols="60">	</textarea>

            </div>
            <div class="item">
                <label class="form-label">Brief</label>
                <br />
                <textarea asp-for="brief" class="form-label" cols="60">	</textarea>
            </div>
            <div class="item">
                <label asp-for="note" class="form-label">Note</label>
                <br />
                <textarea asp-for="note" class="form-label" cols="60">	</textarea>
                <span asp-validation-for="note" class="text-danger"></span>
            </div>
            <div class="item">
                <label asp-for="image" class="form-label">Choose Imange</label>
                <br />
                <input asp-for="image" type="file" class="form-label" cols="60">
                <span asp-validation-for="image" class="text-danger"></span>
                <br>
            </div>
            <!-- Submit -->
            <button type="submit"> Submit Button</button>
            <!-- Clear Character All Field -->
            <button type="reset"> Reset Button</button>
        </form>
    </div>
 </body>   